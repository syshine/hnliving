<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")@*-3.3.7*@
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Styles.Render("~/Content/Swiper-min")

    @RenderSection("csses", required: false)
    @RenderSection("scriptHead", required: false)

    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        var rem = 18;       // 1个rem是多少像素
        var rate = 2;       // 宽高比例
        fontAdapt();

        // 字体适配不同屏幕大小
        function fontAdapt() {
            rem = document.documentElement.clientWidth / 640 * 10;// * 100
            rate = document.documentElement.clientWidth / document.documentElement.clientHeight;
            if (rem < 12) {
                rem = 12;
            }
            document.documentElement.style.fontSize = rem + 'px';
            //console.log('rate='+rate);
        }
    </script>
</head>
<body>

    @Html.Partial("_LayoutHead")

    <div class="" id="render-body">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/bootstrap")@*-3.3.7*@
    @Scripts.Render("~/bundles/Swiper-min")
    @RenderSection("scripts", required: false)
</body>
</html>
