<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/H5")
    @RenderSection("csses", required: false)

    <style>
        *, p {
	        margin: 0;
	        padding: 0;
        }

        html, body, #banner, #banner .swiper-slide {
	        height: 100%;
        }

        .h5-container {
            max-width:640px;
            margin:0 auto;
            height:100%;
            position:relative;
        }

        .ani{
	        position:absolute;
	    }

        .qr_code_pc{
            position: fixed;
            right: 20px;
            top: 20px;
            width: 130px;
            padding: 16px;
            border: 1px solid #d9dadc;
            background-color: #fff;
            word-wrap: break-word;
            word-break: break-all;
            color: #717375;
            text-align: center;
            box-sizing: border-box;
        }

        .qr_code_img{
            width:102px;
        }
    </style>

    <script src="~/Plugins/Anime/anime.min.js"></script>
</head>
<body>

    <div class="h5-container">@*container body-content*@
        @RenderBody()
    </div>


    <div class="qr_code_pc d-sm-none d-lg-block">
        <img id="js_qr_code_img" class="qr_code_img" src="/tools/program/qrcode/GetQRCode?content=@WorkContext.Url">
        <p class="mt-2">手机查看</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/H5")
    @RenderSection("scripts", required: false)


    @*<script>
        getQRCode("@WorkContext.Url");

        function getQRCode(content) {
            $('#js_qr_code_img').attr("src", '/tools/program/qrcode/GetQRCode?content=' + content);
            $('#js_qr_code_img').attr("title", content);
        }
    </script>*@
</body>
</html>