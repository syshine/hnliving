                </thead>
                <tbody>
                    @*@foreach (System.Data.DataRow dr in Model.Rows)*@
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.Rows[i]["gname"].ToString()</td>
                            @*<td>@Html.ActionLink("编辑", "editGroup", new { sid = Model.Rows[i]["gid"].ToString() }, new { @class = "editOperate" })</td>
                            <td>@Html.ActionLink("删除", "deleteGroup", new { sid = Model.Rows[i]["gid"].ToString() }, new { @class = "deleteOperate" })</td>*@
                            <td><a class="editOperate" href="/Invest/Stock/Formula/editGroup?gid=@Model.Rows[i]["gid"].ToString()">编辑</a></td>
                            <td><a class="deleteOperate" href="/Invest/Stock/Formula/deleteGroup?gid=@Model.Rows[i]["gid"].ToString()">删除</a></td>
                            @*<td>
                                    @if (i == Model.Rows.Count - 1)
                                    {
                                        <a href="javascript:void(0)" class="btn btn-primary" role="button" onclick="addSortButton()">添加</a>
                                    }
                                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>

