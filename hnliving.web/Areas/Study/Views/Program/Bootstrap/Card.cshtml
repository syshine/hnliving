
@{
    ViewBag.Title = "卡片";
    Layout = "~/Areas/Study/Views/Program/Shared/_LayoutBootstrap.cshtml";
}

<div class="col-12">
    <h4 class="mt-4">简单的卡片</h4>
    <div class="code-div">
        <div class="card">
            <div class="card-body">简单的卡片</div>
        </div>
    </div>

    <h4 class="mt-4">卡片头部和底部</h4>
    <div class="code-div">
        <div class="card">
            <div class="card-header">头部</div>
            <div class="card-body">内容</div>
            <div class="card-footer">底部</div>
        </div>
    </div>

    <h4 class="mt-4">多种颜色卡片</h4>
    <div class="code-div">
        <div class="card">
            <div class="card-body">Basic card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-primary text-white">
            <div class="card-body">Primary card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-success text-white">
            <div class="card-body">Success card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-info text-white">
            <div class="card-body">Info card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-warning text-white">
            <div class="card-body">Warning card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-danger text-white">
            <div class="card-body">Danger card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-secondary text-white">
            <div class="card-body">Secondary card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-dark text-white">
            <div class="card-body">Dark card</div>
        </div>
    </div>
    <br>
    <div class="code-div">
        <div class="card bg-light text-dark">
            <div class="card-body">Light card</div>
        </div>
    </div>

    <h4 class="mt-4">标题、文本和链接</h4>
    <div class="code-div">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Card title</h4>
                <p class="card-text">Some example text. Some example text.</p>
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>
    </div>

    <h4 class="mt-4">图片卡片</h4>
    <p>图片在头部 (card-img-top):</p>
    <div class="code-div">
        <div class="card" style="width:400px">
            <img class="card-img-top" src="http://static.runoob.com/images/mix/img_avatar.png" alt="Card image" style="width:100%">
            <div class="card-body">
                <h4 class="card-title">John Doe</h4>
                <p class="card-text">Some example text some example text. John Doe is an architect and engineer</p>
                <a href="#" class="btn btn-primary">See Profile</a>
            </div>
        </div>
    </div>

    <br />
    <p>图片在头部 (card-img-top):</p>
    <div class="code-div">
        <div class="card" style="width:400px">
            <div class="card-body">
                <h4 class="card-title">Jane Doe</h4>
                <p class="card-text">Some example text some example text. Jane Doe is an architect and engineer</p>
                <a href="#" class="btn btn-primary">See Profile</a>
            </div>
            <img class="card-img-bottom" src="http://static.runoob.com/images/mix/img_avatar.png" alt="Card image" style="width:100%">
        </div>
    </div>

    <h4 class="mt-4">文字覆盖图片</h4>
    <div class="code-div">
        <div class="card img-fluid" style="width:500px">
            <img class="card-img-top" src="http://static.runoob.com/images/mix/img_avatar.png" alt="Card image" style="width:100%">
            <div class="card-img-overlay">
                <h4 class="card-title">John Doe</h4>
                <p class="card-text">Some example text some example text. Some example text some example text. Some example text some example text. Some example text some example text.</p>
                <a href="#" class="btn btn-primary">See Profile</a>
            </div>
        </div>
    </div>
</div>

