
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Study/Views/Shared/_LayoutDefault.cshtml";
}

@section csses{
    <style>
        .card-width {
            width:300px;
            min-width:200px;
        }

        /*razor语法和媒体查询符号冲突，需使用两个at*/
        @@media screen and (max-width: 575.98px) {
            .card-width {
                width:200px;
            }
        }
    </style>
}

<div class="center-block">
    <h2>学习首页</h2>
</div>
<div class="container-fluid">
    <div class="row col-12 col-xl-10 offset-lg-1">
        <div class="card m-2 m-md-4 card-width">
            <img class="card-img-top" src="~/Areas/Study/Images/csharp.jpg" alt="c# image" style="width:100%;height:200px;">
            <div class="card-body">
                <h4 class="card-title">程序</h4>
                <p class="card-text">C#,html,bootstrap等技术学习资料。</p>
                <a class="btn btn-primary" href="/Study/Program">查看更多</a>
                @*@Html.ActionLink("查看更多", "Index", "Program/Home", new { area = "Study" }, new { @class = "btn btn-primary" })*@
            </div>
        </div>

        <div class="card m-2 m-md-4 card-width">
            <img class="card-img-top" src="~/Areas/Study/Images/mvc.jpg" alt="mvc image" style="width:100%;height:200px;">
            <div class="card-body">
                <h4 class="card-title">公务员</h4>
                <p class="card-text">公务员，全称为国家公务员，是各国负责统筹管理经济社会秩序和国家公共资源，维护国家法律规定贯彻执行的公职人员。</p>
                <a class="btn btn-primary" href="/Study/CivilServant">查看更多</a>
                @*@Html.ActionLink("查看更多", "Index", "CivilServant/Home", new { area = "Study" }, new { @class = "btn btn-primary" })*@
            </div>
        </div>

        <div class="card m-2 m-md-4 card-width">
            <img class="card-img-top" src="~/Areas/Study/Images/bootstrap.jpg" alt="bootsrap image" style="width:100%;height:200px;">
            <div class="card-body">
                <h4 class="card-title">教育</h4>
                <p class="card-text">教师资格证，各门学科学习资料。</p>
                <a class="btn btn-primary" href="/Study/Education">查看更多</a>
                @*@Html.ActionLink("查看更多", "Index", "Education/Home", new { area = "Study" }, new { @class = "btn btn-primary" })*@
            </div>
        </div>

        <div class="card m-2 m-md-4 card-width">
            <img class="card-img-top" src="~/Areas/Study/Images/h5.jpg" alt="h5 image" style="width:100%;height:200px;">
            <div class="card-body">
                <h4 class="card-title">Microsoft Office</h4>
                <p class="card-text">Microsoft Office是微软公司开发的一套基于 Windows 操作系统的办公软件套装。常用组件有 Word、Excel、Powerpoint等。</p>
                <a href="#" class="btn btn-primary">查看更多</a>
            </div>
        </div>
    </div>
</div>
