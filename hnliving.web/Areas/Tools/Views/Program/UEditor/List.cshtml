@model List<Lib.Core.UEditorEntity>

@{
    ViewBag.Title = "UEditor列表";
    var htSort = ViewData["htSort"] as System.Collections.Hashtable;
}

@section scriptsHead{
}

<div class="row ml-0 mr-0 mt-5"> @* align-items-centerjustify-content-center login-center*@
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 bg-teal-7">
        <h4>UEditor列表：</h4>
        <hr />


        <div class="form-group">
            <table class="table table-striped table-hover" id="list">
                <thead>
                    <tr>
                        <th width="4"></th>
                        <th width="70" align="center">序号</th>
                        <th width="100" align="center">分类</th>
                        <th align="left">标题</th>
                        <th width="140" align="center">更新时间</th>
                        <th width="70" align="center">编辑</th>
                        <th width="70" align="center">删除</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Lib.Core.UEditorEntity uee in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@(Model.IndexOf(uee) + 1)</td>
                            <td>
                                @htSort[@uee.Typeid.ToString()].ToString()
                            </td>
                            <td>@uee.Title</td>
                            <td>@uee.Update_time.ToString("yyyy-MM-dd")</td>
                            <td>@Html.ActionLink("[编辑]", "Edit", new { ueid = uee.Id }, new { @class = "editOperate" })</td>
                            <td>@Html.ActionLink("[删除]", "Delete", new { ueid = uee.Id }, new { @class = "deleteOperate" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>

@section Scripts {
    <script>

        $().ready(function () {
        });

    </script>

}
